extends layout

block content
  .row#login-row
    .col-md-4.col-md-offset-4
      h1.text-center CIHL LOGIN
      form(name="addUser", role="form", method="post",action="/register")
        .form-group
          label.control-label(for='username') Username
          input.form-control(type="text", placeholder="Username", name="username" required, autofocus=true)
        .form-group
          label.control-label(for='password') Password
          input.form-control(type="password", placeholder="Password", name="password" required)
        .form-group
          label.control-label(for='email') Email address
          input.form-control(type="email", placeholder="Email", name="email" required)
        .form-group
          label.control-label(for='dotabufflink') Dotabuff [optional]
          input.form-control(type="url", placeholder="Dotabuff url [optional]", name="dotabuff" optional)
        .form-group.text-center
          button.btn.btn-primary#register(type="submit") Sign up



