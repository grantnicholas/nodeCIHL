extends layout

block content
  .row#login-row
    .col-md-4.col-md-offset-4
      script.
        var success=success
      if success == true
        div#myAlert.alert.alert-success.text-center(data-alert="alert")
          div=status
      if success == false
        div#myAlert2.alert.alert-error.alert-danger.text-center(data-alert="alert")
          div=status
      h1.text-center CIHL
      a.btn.btn-default.center-block(href="/login") BACK TO LOGIN
      form(name="addUser", role="form", method="post",action="/forgotpass")
        .form-group
          label.control-label(for='email') Email
          input.form-control(type="email", placeholder="Email", name="email" required, autofocus=true)
        .form-group.text-center
          button.btn.btn-primary#forgotpass(type="submit") Reset Password